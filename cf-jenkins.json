{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "venicegeo-devops-dev-lime-project, uses vanilla Amazon Linux AMI (ami-7172b611)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craiggoami": "ami-7172b611"}
  }
},
"Parameters" : {
 "instancetype" : {
  "Type" : "String"
 }
},
"Resources": {
  "SecurityGroup": {
   "Type": "AWS::EC2::SecurityGroup",
   "Properties": {
    "GroupDescription": "craiggo security group",
    "VpcId": "vpc-4e33072b",
    "SecurityGroupIngress": [
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 22,
     "IpProtocol": "tcp",
     "ToPort": 22
    },
    {
     "CidrIp": "52.21.147.39/32",
     "FromPort": 8080,
     "IpProtocol": "tcp",
     "ToPort": 8080
    }
    ]
   }
  },
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"Name",
     "Value":"craigJ"
    }],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craiggoami"
     ]
    },
    "InstanceType": {"Ref" : "instancetype"},
    "KeyName":  "craigradiantblueoregon" ,
    "SecurityGroupIds": [{
     "Ref": "SecurityGroup"
    }],
    "IamInstanceProfile": "craigtest",
    "BlockDeviceMappings" : [{
      "DeviceName" : "/dev/xvda",
      "Ebs" : { "VolumeSize" : "8" }
    }],
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"yum install git -y\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone https://github.com/craigwongva/lime.git > /tmp/u01 2>&1 '\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user/lime; ./userdata-jenkins > /tmp/u03d 2>&1'\n"
     ]
    ]}}
   }
  }
},
"Outputs" : {
  "InstanceID" : {
    "Description": "The Instance ID",  
    "Value" : { "Fn::GetAtt" : [ "Server" , "PublicIp" ] }
  }
}
}
